<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string"/>
    <attr name="title_size" format="dimension"/>
    <attr name="title_color" format="color"/>
    <attr name="title_weight" format="enum">
        <enum name="normal" value="0"/>
        <enum name="bold" value="1"/>
    </attr>
    <attr name="alignment" format="enum">
        <enum name="start" value="20"/>
        <enum name="end" value="21"/>
        <enum name="center" value="14"/>
    </attr>
    <attr name="corner_radius" format="dimension"/>
    <attr name="pressed_color" format="color"/>
    <attr name="progressing_color" format="color"/>
    <attr name="border_width" format="dimension"/>
    <attr name="border_color" format="color"/>
    <attr name="is_loading" format="boolean"/>
    <attr name="bkg_color" format="color"/>

    <declare-styleable name="MUHeader">
        <attr name="title"/>
        <attr name="title_size"/>
        <attr name="title_weight"/>
        <attr name="title_color"/>
        <attr name="alignment"/>

        <attr name="detail" format="string"/>
        <attr name="detail_size" format="dimension"/>
        <attr name="detail_color" format="color"/>
        <attr name="detail_weight" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>

        <attr name="vertical_spacing" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MUTopBar">
        <attr name="title"/>
        <attr name="title_size"/>
        <attr name="title_weight"/>
        <attr name="title_color"/>
        <attr name="topbar_title_alignment" format="enum">
            <enum name="start" value="20"/>
            <enum name="end" value="21"/>
            <enum name="center" value="14"/>
        </attr>

        <attr name="topbar_btn_img" format="reference"/>
        <attr name="topbar_img_width" format="dimension"/>
        <attr name="topbar_btn_left_padding" format="dimension"/>
        <attr name="topbar_btn_leading" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MUTextField">
        <attr name="title"/>
        <attr name="title_size"/>
        <attr name="title_weight"/>
        <attr name="title_color"/>
        <attr name="alignment"/>
        <attr name="is_secure" format="boolean"/>
        <attr name="auto_correct" format="boolean"/>
        <attr name="android:inputType"/>
        <attr name="android:editable"/>
        <attr name="android:hint"/>
        <attr name="android:textColorHint"/>
        <attr name="field" format="string"/>
        <attr name="field_size" format="dimension"/>
        <attr name="field_color" format="color"/>
        <attr name="field_weight" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MUAvatar">
        <attr name="corner_radius"/>
        <attr name="android:src"/>
        <attr name="border_width"/>
        <attr name="border_color"/>
        <attr name="bkg_color"/>
        <attr name="border_type" format="enum">
            <enum name="square" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MUButton">
        <attr name="android:alpha"/>
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="android:textStyle"/>
        <attr name="android:paddingVertical"/>
        <attr name="android:paddingHorizontal"/>
        <attr name="bkg_color"/>
        <attr name="disable_alpha" format="float"/>
        <attr name="text_alignment" format="enum">
            <enum name="start" value="3"/>
            <enum name="center" value="17"/>
            <enum name="end" value="5"/>
        </attr>
        <attr name="pressed_color"/>
        <attr name="progressing_color"/>
        <attr name="is_loading"/>
        <attr name="border_width"/>
        <attr name="border_color"/>
        <attr name="border_alpha" format="float"/>
        <attr name="corner_radius"/>
    </declare-styleable>

</resources>