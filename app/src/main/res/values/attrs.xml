<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MUHeader">
        <attr name="header_title" format="string"/>
        <attr name="header_detail" format="string"/>
        <attr name="header_title_size" format="dimension"/>
        <attr name="header_title_weight" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>

        <attr name="header_detail_size" format="dimension"/>
        <attr name="header_detail_weight" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>
        <attr name="header_vertical_spacing" format="dimension"/>
        <attr name="header_title_color" format="color"/>
        <attr name="header_detail_color" format="color"/>
        <attr name="header_alignment" format="enum">
            <enum name="start" value="20"/>
            <enum name="end" value="21"/>
            <enum name="center" value="14"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MUTopBar">
        <attr name="topbar_title" format="string"/>
        <attr name="topbar_title_size" format="dimension"/>
        <attr name="topbar_title_weight" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>
        <attr name="topbar_title_color" format="color"/>
        <attr name="topbar_title_alignment" format="enum">
            <enum name="start" value="20"/>
            <enum name="end" value="21"/>
            <enum name="center" value="14"/>
        </attr>

        <attr name="topbar_btn_img" format="reference"/>
        <attr name="topbar_img_width" format="dimension"/>
        <attr name="topbar_btn_left_padding" format="dimension"/>
        <attr name="topbar_btn_leading" format="dimension"/>
        <attr name="topbar_btn_alignment">
            <enum name="start" value="20"/>
            <enum name="end" value="21"/>
            <enum name="center" value="14"/>
        </attr>
    </declare-styleable>
</resources>