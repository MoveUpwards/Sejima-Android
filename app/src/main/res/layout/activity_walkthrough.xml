<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!--<LinearLayout-->
    <!--android:id="@+id/bottom_layout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical"-->
    <!--android:background="@color/colorPrimary"-->
    <!--android:layout_alignParentBottom="true">-->

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <com.rlab.sejima.features.MUHeader
            android:id="@+id/page_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/title"
            app:title_color="@color/colorAccent"
            app:title_size="14dp"
            app:detail="@string/detail"
            android:layout_marginEnd="5dp"
            app:detail_color="#fff"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rlab.sejima.features.MUPageControl
                android:id="@+id/mu_pagecontrol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <com.rlab.sejima.features.MUButton
                android:id="@+id/mu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Next"
                app:strokeWidth="0dp"
                app:strokeColor="@color/colorAccent"
                app:pressed_color="#000"
                app:bkg_color="#0000"
                android:textSize="12sp"
                android:paddingVertical="2dp"
                android:textColor="@color/colorAccent"/>

        </RelativeLayout>

    </LinearLayout>

    <com.rlab.sejima.features.MUHorizontalPager
        android:id="@+id/mu_horizontalpager"
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom_bar"
        android:layout_height="match_parent"/>

    <!--</LinearLayout>-->


</RelativeLayout>